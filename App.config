<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <configSections>
        <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
    </configSections>
  
  <!-- Config fÃ¶r programet-->
  <appSettings>
    <add key="sourceFolder" value="C:\Temp\sourceFolder"/>
    <add key="destinationFolder" value="C:\Temp\destinationFolder"/>
    <add key="filterFileType" value="*.xml"/>
  </appSettings>
  
  <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.1"/>
    </startup>
    <log4net>
        <!-- ColoredConsoleAppender -->
        <appender name="ColoredConsoleAppender" type="log4net.Appender.ColoredConsoleAppender">
            <mapping>
                <level value="INFO"/>
                <foreColor value="White"/>
            </mapping>
            <mapping>
                <level value="ERROR"/>
                <foreColor value="Red, HighIntensity"/>
            </mapping>
            <mapping>
                <level value="DEBUG"/>
                <foreColor value="Green, HighIntensity"/>
            </mapping>
            <mapping>
                <level value="WARN"/>
                <foreColor value="Yellow, HighIntensity"/>
            </mapping>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%-5level %logger-%message%newline"/>
            </layout>
        </appender>
        <!-- ConsoleAppender -->
        <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%-5level %logger-%message%newline"/>
            </layout>
        </appender>
        <!-- File appender -->
        <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
            <encoding value="utf-8"/>
            <appendToFile value="true"/>
            <file value="C:\Integration\logs\FileDirectorySystemWatcher\FileDirectorySystemWatcher.log"/>
            <rollingStyle value="Date"/>
            <datePattern value=".yyyy-MM-dd"/>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date{ISO8601} %-5p [%property{x-b3-traceid},%property{x-b3-spanid}] %c - %m%n"/>
            </layout>
        </appender>
        <root>
            <level value="DEBUG"/>
            <!-- <appender-ref ref="ColoredConsoleAppender" /> -->
            <!-- <appender-ref ref="ConsoleAppender" /> -->
            <appender-ref ref="RollingFileAppender"/>
            <!--<appender-ref ref="SmtpAppender"/>-->
        </root>
    </log4net>
</configuration>
